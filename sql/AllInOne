create table territories_adjacent

(

  territory_a INT NOT NULL REFERENCES territories,

  territory_b INT NOT NULL REFERENCES territories,

  CONSTRAINT territories_adjacent_pkey PRIMARY KEY (territory_a, territory_b)

);

